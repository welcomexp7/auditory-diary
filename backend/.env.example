# ==========================================
# Auditory Diary - Local Environment Example
# ==========================================

# 1. FastAPI App Settings
PROJECT_NAME="Auditory Diary API"
VERSION="1.0.0"

# 2. Database Connection (from docker-compose.yml)
# format: postgresql+asyncpg://user:password@host:port/dbname
DATABASE_URL="postgresql+asyncpg://postgres:postgrespassword@localhost:5432/auditory_diary_db"

# 3. Google OAuth Settings (로그인)
GOOGLE_CLIENT_ID="your-google-client-id-here"
GOOGLE_CLIENT_SECRET="your-google-client-secret-here"
GOOGLE_REDIRECT_URI="http://127.0.0.1:8000/api/auth/google/callback"

# 4. Spotify API Settings (음악 메타데이터 수집)
SPOTIFY_CLIENT_ID="your-spotify-client-id-here"
SPOTIFY_CLIENT_SECRET="your-spotify-client-secret-here"
SPOTIFY_REDIRECT_URI="http://127.0.0.1:8000/api/auth/spotify/callback"

# 5. External APIs (옵션: 위치, 날씨 보정용)
OPENWEATHER_API_KEY="your-openweather-api-key"
GOOGLE_MAPS_API_KEY="your-google-maps-api-key"

# 6. JWT Secret (Session Auth)
SECRET_KEY="super-secret-local-key-change-for-production"
ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES=10080 # 7 Days
